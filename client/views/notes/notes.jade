h1 NOTES

.row
  .small-8.columns
    h3 VIEW
    table#notes
      thead
        tr
          th
          th Title
          th Tags
      tbody
        tr(ng-repeat='note in notes')
          td: button(ng-click='show(row.noteid)') View
          td: a(href='/#/notes/{{note_id}}') {{note.title}}
          td
            span.tag(ng-repeat='name in note.tag_names')
              a(href='/notes?tag={{name}}') {{name}}
  .small-4.columns
    h3 CREATE
    input(type='text', ng-model='note.title', placeholder='Title')
    textarea(ng-model='note.body')
    input(type='text', ng-model='note.tags', placeholder='tag1,tag2,tag3')
    button.radius.warning(ng-file-select ng-model="files" multiple="true") Add Photos
    button.radius.success(ng-click='create(note)') Create
    h5(ng-show='files.length') {{files.length}} Added
      .filenames
       .file(ng-repeat='f in files') {{f.name}}


